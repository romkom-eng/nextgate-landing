{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        {
            "src": "dashboard/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/dashboard/(.*)",
            "dest": "/dashboard/$1"
        },
        {
            "src": "/frontend/(.*)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        }
    ]
}